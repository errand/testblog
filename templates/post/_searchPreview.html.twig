{% for post in posts %}
    <div class="search-result mb-4 border-bottom border-gray">
        <h2 class="h4"><a href="{{ path('post', { id: post.id }) }}">{{ post.title | highlight(query) }}</a></h2>
        <p class="search-result__body pb-3">
            {{ post.body | slice(0, 255) | highlight(query)  }} ...
        </p>
    </div>
{% endfor %}
